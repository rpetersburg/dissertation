	author = {Zechmeister, M. and Anglada-Escudé, G. and Reiners, A.},
	month = jan,
	year = {2014},
	keywords = {instrumentation: spectrographs, methods: data analysis, techniques: image processing, techniques: radial velocities},
	pages = {A59},
}

