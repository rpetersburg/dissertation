	year = {2016},
	note = {ISBN: 9781369095258},
	keywords = {Exoplanets, Extrasolar Planets, Pure sciences, Radial Velocities, Spectrometers, Spectroscopy, Stellar Activity},
}

@article{leet_toward_2019,
